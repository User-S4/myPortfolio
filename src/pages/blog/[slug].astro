<main style="min-height: 40vh; display: flex; align-items: center; justify-content: center;">
  <h2 style="color: #888; font-size: 2rem; text-align: center;">Blog route is temporarily disabled for deployment.<br/>Please check back later.</h2>
</main>

<Layout title={`${post.title} | Arun Kumar S.`}>
  <section class="pt-32 pb-8 bg-white dark:bg-neutral-900">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <div class="mb-6">
          <div class="flex flex-wrap gap-2 mb-4">
            {post.tags.map((tag) => (
              <a href={`/blog?tag=${tag}`} class="text-sm bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full hover:bg-primary-200 dark:hover:bg-primary-800 transition-colors">
                {tag}
              </a>
            ))}
          </div>
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{post.title}</h1>
          
          <div class="flex items-center text-neutral-600 dark:text-neutral-400 mb-6">
            <span>{new Date(post.publishedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          </div>
        </div>
        
        {post.coverImage && (
          <div class="rounded-xl overflow-hidden mb-8">
            <img 
              src={post.coverImage} 
              alt={post.title}
              class="w-full h-auto object-cover"
            />
          </div>
        )}
      </div>
    </div>
  </section>
  
  <section class="py-12 bg-white dark:bg-neutral-900">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-lg dark:prose-invert">
          <div set:html={post.content} />
        </article>
      </div>
    </div>
  </section>
</Layout>

